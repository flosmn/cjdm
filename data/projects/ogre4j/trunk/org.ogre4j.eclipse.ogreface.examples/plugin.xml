<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.2"?>

<plugin version="3.0.0">
   <extension
         point="org.eclipse.ui.views">
      <category
            name="Ogre4Eclipse"
            id="org.eclipse.ogre4j">
      </category>
      <view
            name="Simple Ogre View"
            icon="icons/sample.gif"
            category="org.eclipse.ogre4j"
            class="org.ogre4j.eclipse.ogreface.examples.SimpleOgreView"
            id="org.eclipse.ogre4j.ui.example.simpleogreview">
      </view>
   </extension>

   <extension
         point="org.eclipse.ui.actionSets">
      <actionSet
            label="Ogre4Eclipse Action Set"
            visible="true"
            id="org.eclipse.ogre4j.ui.examples.actionset">
         <menu
               label="Ogre4Eclipse"
               id="ogreclipseMenu">
            <separator
                  name="ogreclipseGroup">
            </separator>
         </menu>
         <action
               label="Show View"
               icon="icons/sample.gif"
               class="org.ogre4j.eclipse.ogreface.examples.actions.ShowView"
               menubarPath="ogreclipseMenu/ogreclipseGroup"
               id="org.eclipse.ogre4j.ui.example.actions.showView">
         </action>
      </actionSet>
   </extension>   
</plugin>
