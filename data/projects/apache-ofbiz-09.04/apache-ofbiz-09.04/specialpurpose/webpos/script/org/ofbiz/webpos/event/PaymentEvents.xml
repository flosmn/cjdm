            <call-object-method obj-field="webPosTransaction" method-name="clearPayments"/>
            <check-errors/>
            <log level="info" message="Cleared All Payments"/>
        <else>
            <add-error><fail-property resource="WebPosUiLabels" property="WebPosNotLoggedIn"/></add-error>
            <check-errors/>
        </else>
        </if-not-empty>
    </simple-method>
